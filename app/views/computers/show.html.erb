<% if notice != nil %>
	<div class="alert alert-success">
  		<button type="button" class="close" data-dismiss="alert">×</button>
  		<p id="notice"><%= notice %></p>
	</div>
<% end %>
<br /><legend>COMPUTERS</legend>
<table class="table table-striped">
	<tr>
		<td>Hostname:</td>
		<td><%= @computer.hostname %></td>
	</tr>
	<tr>
		<td>IP:</td>
		<td><%= @computer.ip %></td>
	</tr>
	<tr>
		<td>Operational System:</td>
		<td><%= @computer.os %></td>
	</tr>
	<tr>
		<td>Processor:</td>
		<td><%= @computer.processor %></td>
	</tr>
		<tr>
		<td>Memory RAM (MB):</td>
		<td><%= @computer.memory_ram %></td>
	</tr>
	<tr>
		<td>Hard Disk:</td>
		<td><%= @computer.hard_disk %></td>
	</tr>
	<tr>
      <td align="left">
        Show QR Code
      </td>
      <td align="right">
		<%= link_to image_tag("qrcode.png", :title => "Show QR Code"), "#myModal", :data => {:toggle=>"modal"} %>
      </td>
    </tr>
	<tr>
		<td>Observations: </td>
		<td><%= @computer.obs %></td>
	</tr>
</table>
<%= link_to image_tag("back.png", :alt => "Back"), computers_path, :class => "btn"  %>

<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>QrCode for <%= @computer.hostname %></h3>
  </div>
  <div class="modal-body">
 		<%= render 'qrcode', :object => :computer %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>​