
<% if notice != nil %>
	<div class="alert alert-success">
  		<button type="button" class="close" data-dismiss="alert">×</button>
  		<p id="notice"><%= notice %></p>
	</div>
<% end %>
<br />
<legend>SERVERS</legend>

<table class="table table-striped">
	<tr>
		<td>Hostname:</td>
		<td><%= @server.hostname %></td>
	</tr>
	<tr>
		<td>IP:</td>
		<td><%= @server.ip %></td>
	</tr>
	<tr>
		<td>Operational System:</td>
		<td><%= @server.os %></td>
	</tr>
    <tr>
      <td align="left">
        Show QR Code
      </td>
      <td align="right">
		<%= link_to image_tag("qrcode.png", :title => "Show QR Code"), "#myModal", :data => {:toggle=>"modal"} %>
      </td>
    </tr>  
	<tr>
		<td>Description:</td>
		<td><textarea rows="4"><%=  @server.description %></textarea></td>
	</tr>
</table>

<%= link_to image_tag("back.png", :title => "Back"), servers_path, :class => "btn" %>


<div class="modal hide" id="myModal">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">×</button>
    <h3>QrCode for <%= @server.hostname %></h3>
  </div>
  <div class="modal-body">
 		<%= render 'qrcode', :object => :server %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
  </div>
</div>​